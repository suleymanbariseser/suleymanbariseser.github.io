---
import Header from '../components/Header.astro';

import '../styles/base.css';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <meta
      name='description'
      content='Senior Frontend developer portfolio of Süleyman Barış Eser'
    />
    <meta name='twitter:card' content='summary_large_image' />
    <meta name='twitter:site' content='@bariseser_' />
    <meta name='twitter:creator' content='@bariseser_' />
    <meta name='twitter:title' content='Barış Eser' />
    <meta
      name='twitter:image'
      content='https://pbs.twimg.com/profile_images/1296496979623718912/Y7euqDXN_400x400.jpg'
    />
    <meta name='author' content='Süleyman Barış Eser' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class='bg-zinc-950 min-h-screen w-screen overflow-x-hidden text-zinc-400'
  >
    <Header />
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: system-ui, sans-serif;
  }
</style>
