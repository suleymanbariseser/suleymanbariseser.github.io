---
import { Icon } from 'astro-icon';

interface Props {
  icon?: string;
}

const { icon } = Astro.props as Props;
---

<button
  class='bg-zinc-900 border border-zinc-800 px-12 py-4 rounded-sm hover:bg-zinc-800 hover:border-zinc-700 active:bg-transparent transition-all outline-none'
>
  <div class='flex flex-row gap-x-2 text-sm items-center justify-center'>
    <p class='text-sm'><slot /></p>
    {icon && <Icon name={icon} width={20} />}
  </div>
</button>
